{% include '_header.twig' %}

<div class="row separator">

  <article class="large-12 columns">
    <h1>{{ page.title }}</h1>
    {{ record.body }}

{% setcontent paarden = "paarden" where { "paardtypes": 'normal'} %} 
    {% for paard in paarden|order ('paardvolgorde') %}
    <section class="large-3 small-6 columns deelnemerblok">
      {% if paard.image!="" %}
      <img src="{{ paard.image|thumbnail(300,300, "c") }}" alt="{{ paard.title }}">
      {% else %}
      <img src="{{ paths.theme }}ui_images/placeholder_300x300px_tinted.png" alt="Nog geen foto van {{ paard.title }}" style="paard_placeholder">
      {% endif %}
      <h5>{{ paard.title }}</h5>
      <p>{{ paard.activiteiten }}</p>
    {% if paard.website!="" %}
      <p class="deelnemerlink"><a href="http://{{ paard.website }}" title="Ga naar de website van {{ paard.title }} {{ paard.bedrijfsnaam }}" target="_blank">Website &raquo;</a></p>
      {% endif %}    </section>
    {% endfor %}
</article>
<article class="large-12 columns">
  {{ record.body_onder}}
  {% setcontent paarden = "paarden" where { "paardtypes": 'wild'} %} 
      {% for paard in paarden|order ('paardvolgorde') %}
    <section class="large-3 small-6 columns deelnemerblok">
      {% if paard.image!="" %}
      <img src="{{ paard.image|thumbnail(300,300, "c") }}" alt="{{ paard.title }}">
      {% else %}
      <img src="{{ paths.theme }}ui_images/placeholder_300x300px_tinted.png" alt="Nog geen foto van {{ paard.title }}" style="paard_placeholder">
      {% endif %}
      <h5>{{ paard.title }}</h5>
      <p>{{ paard.activiteiten }}</p>
      {% if paard.website!="" %}
      <p class="deelnemerlink"><a href="http://{{ paard.website }}" title="Ga naar de website van {{ paard.title }} {{ paard.bedrijfsnaam }}" target="_blank">Website &raquo;</a></p>
      {% endif %}
    </section>
    {% endfor %}
  </article>
</div>
{% include '_footer.twig' %}
